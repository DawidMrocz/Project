@model Aplikacja.DTOS.CatDto.CatDTO
@{
    ViewData["Title"] = "Privacy Page";
}

<head>
    <link rel="stylesheet" href="~/css/Cat.css" asp-append-version="true" />
</head>

<table class="table table-striped table-hover" style="width:100%">
    <thead>
        <tr>
            <th>
                CCtr
            </th>
            <th>
                ActTyp
            </th>
            <th>
                Receiver
            </th>
            <th>
                Text
            </th>
            @for (int i = 1; i <= 31; i++) 
            {
                <th>
                    @i
                </th>
            } 
        </tr>
    </thead>
    <tbody>
         @foreach (var obj in Model.CatRecords)
        {
              <tr>
                <td width="6%"> @Model.CCtr</td>
                  <td width="6%"> @Model.ActTyp</td>
                  <td width="6%"> @obj.Receiver</td>
                  <td width="6%"> @obj.SapText</td>
                  @for (int i = 1; i <= 31; i++)
                  {
                     if (obj.CatRecordHours.Exists(u => u.Day == i))
                     {
                        <td width="6%">@obj.CatRecordHours[obj.CatRecordHours.FindIndex(u => u.Day == i)].Hours</td>
                     }
                     else
                     {
                          <td width="6%"></td>
                     }
                  }
              </tr> 
        }
    </tbody>
</table>
